<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom Style -->
    <style name="CustomBaseTheme" parent="AppTheme.NoActionBar" />

    <style name="AppTheme.NoActionBar.Full" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>

        <item name="actionMenuTextColor">@color/colorPrimaryDark</item>
        <item name="actionMenuTextAppearance">@style/ActionMenuTextAppearance</item>
    </style>

    <style name="ActionMenuTextAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="HorizontalProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/holo_blue_dark</item>
    </style>

    <style name="FloatingTextLabel">
        <item name="android:textColorHint">@color/colorGrey7</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/font_opensans</item>

        <item name="colorAccent">@android:color/holo_blue_dark</item>
        <item name="colorControlNormal">@color/colorGrey7</item>
        <item name="colorControlActivated">@color/colorGrey7</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>
    </style>

    <style name="FabStyle" parent="Base.TextAppearance.AppCompat.Button">
        <item name="backgroundTint">@android:color/white</item>
    </style>

</resources>
